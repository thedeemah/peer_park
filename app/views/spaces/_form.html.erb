<%= form_for @space, :html => {:class => "ui form"} do |f| %>

  <% if space.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(space.errors.count, "error") %> prohibited this space from being saved:</h2>
      <ul>
        <% space.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class= "address">
    
    <div class="field"> 
      <%=f.label :address, "Address" %><br />
      <%= f.text_field :address %>
    </div>
    
    <div class="field">
      <%= f.label :city, "City" %><br />
      <%= f.text_field :city %>
    </div>

    <div class="field">
      <%= f.label :state, "State" %><br />
      <%= f.text_field :state %>
    </div>

    <div class="field">
      <%= f.label :zip, "Zip Code" %><br />
      <%= f.text_field :zip %>
    </div>
    
  </div>

  <div class="field">
    <%= f.label :image, "Add a picture" %><br />
    <%= f.file_field :image%>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
