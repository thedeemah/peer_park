<%= form_for @space, :html => {:class => "ui form"} do |f| %>

  <% if space.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(space.errors.count, "error") %> prohibited this space from being saved:</h2>
      <ul>
        <% space.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

	<form class="ui form">
			<div class="field"> 
				<%=f.label :address, "Address" %>
				<%= f.text_field :address, {:style => "width: 20em;"} %>
			</div>
		<div class= "fields">
			<div class="field">
				<%= f.label :city, "City" %>
				<%= f.text_field :city, :style => "width: 10em;" %>
			</div>

			<div class="field">
				<%= f.label :state, "State" %>
				<%= f.text_field :state, :style => "width: 5em;" %>
			</div>

			<div class="field">
				<%= f.label :zip, "Zip Code" %>
				<%= f.text_field :zip, :style => "width: 10em;" %>
			</div>
		</div>
		
			<div class="field">
				<%= f.label :parking_spot_image, "Add a picture" %>
				<%= f.file_field :parking_spot_image %>
			</div>

			<div class="actions">
				<%= f.submit "List Space", class: 'ui button', :style => "width: 7em;" %>
				<%= f.submit "Cancel", class: 'ui button', :style => "width: 7em;" %>
			</div>
		</div> 
	</form> 

<% end %>
