<p id="notice"><%= notice %></p>

<h1>Spaces</h1>

<table>
  <thead>
		<tr>
				<th><h2>Address</h2></th>
				<th><h2>City</h2></th>
				<th><h2>State</h2></th>
				<th><h2>Zip</h2></th><br/>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @spaces.each do |space| %>
			<tr>
				<div class="space">
					<td><%= space.address %></td>
					<td><%= space.city %></td>
					<td><%= space.state %></td>
					<td><%= space.zip %></td>
				</div>
        <td><%= link_to 'Show', space %></td>
        <td><%= link_to 'Edit', edit_space_path(space) %></td>
        <td><%= link_to 'Delete', space, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Space', new_space_path %>
