<form class="reserve ui form">
<p id="notice"><%= notice %></p>


<h1>Space Reserved</h1>
<p>
<h4>Space</h4>
<%= @reservation.space.address %>
</p>
<p>

  <strong>Cover image:</strong>
  <% if @reservation.space.parking_spot_image.attached?  %>
    <%= image_tag @reservation.space.parking_spot_image, height: 250 %>
  <% else %>
    <%= image_tag 'missing.png', height: 250 %>
  <% end %>
</p>
<p>
<strong>Rate:</strong>
<%= format_currency @reservation.space.hourly_rate %>
  
</p>
<p><h4>Start Time</h4>
<%= @reservation.start_time %>
</p>
<p>
  <h4>Duration</h4>
  <%= @reservation.duration %>
</p>
<p><h4>Vehicle:</h4>
<%= @reservation.vehicle.license_plate %>
</p>

<p><strong>Amount</strong>
<%= format_currency (@reservation.space.hourly_rate * @reservation.duration) %>
</p>

<%= link_to 'Edit', edit_reservation_path(@reservation) %> |
<%= link_to 'Back', reservations_path %>
</form>