<h1> Welcome to Peer Park </h1>

<% if current_user %>
<div class="ui compact menu">
  <div class="ui simple dropdown item">
    <i class="bars icon"></i>
    <div class="menu">
      <%= link_to('Profile', edit_user_registration_path, class: "item") %>
      <div class="item">Account History</div>
      <div class="item">Find Space</div>
      <%= link_to('List Space', new_space_path, class: "item") %>
      <%= link_to('Logout', destroy_user_session_path, method: :delete, class: "item") %>
    </div>
  </div>
</div>
<% end %>

<div class="map-parent">
  <%= react_component("Map", props: {"MAPBOX_API_KEY": ENV["MAPBOX_API_KEY"]}) %>
</div>

<div>
	<%= link_to('Login', new_user_session_path, {class: 'ui button'})  %>
	<%= link_to('Sign up to List a Space', new_user_registration_path + '?list=true', {class: 'ui button' })  %>
	<%= link_to('Sign up to Find a Space', new_user_registration_path + '?list=false', {class: 'ui button'})  %>
</div>



