<h1>Profile</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

	<div class="profilefields">
		<div class="ui input">
			<h4><%= f.label :first_name, "First Name", class: "balls" %></h4> 
			<%= f.text_field :first_name, value: resource.first_name %>
		</div>

		<div class="  ui input">
			<h4><%= f.label :last_name, "Last Name", class: "balls" %></h4> 
			<%= f.text_field :last_name, value: resource.last_name %>
		</div>

		<div class=" ui input">
			<h4><%= f.label :cell_number, "Mobile Number", class: "balls" %></h4> 
			<%= f.telephone_field :cell_number, value: resource.cell_number %>
		</div>

		<div class=" ui input">
			<h4><%= f.label :email, class: "balls" %></h4> 
			<%= f.email_field :email, autofocus: true, value: resource.email %>
		</div>

		<% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
			<div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
		<% end %>

		<div class=" ui input">
			<h4><%= f.label :new_password, class: "balls"  %></h4> 
			<%= f.password_field :password, autocomplete: "off" %>
			<% if @minimum_password_length %>
			<% end %>
		</div>

		<div class="ui input">
			<h4><%= f.label :password_confirmation, "Confirm Password", class: "balls" %></h4> 
			<%= f.password_field :password_confirmation, autocomplete: "off" %>
		</div>

		<div class="ui input">
			<h4><%= f.label :current_password, "Current Password", class: "balls" %> </h4> 
			<%= f.password_field :current_password, autocomplete: "off" %>
		</div>
	</div>

  <div class="actions">
    <%= f.submit "Update", class: 'ui submit button' %>
		<%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'ui submit button' %>
		<%= link_to("Back", :back, class: 'ui button') %>
		<%= link_to("My Vehicles", vehicles_path, class:'ui button') %>
		<%= link_to("My Spaces", spaces_path, class:'ui button') %>
	</div>

<% end %>

