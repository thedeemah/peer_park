<h1>Log in</h1>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
	<div class="ui form">
		<div class="field">
			<%= f.label :email %>
			<%= f.email_field :email, autofocus: true, autocomplete: "email", class: "ui field" %>
		</div>

		<div class="field">
			<%= f.label :password %>
			<%= f.password_field :password, autocomplete: "off" %>
		</div>
	</div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", class: 'loginbttn ui submit button' %>
  </div>
<% end %>

<div class="deviselinks">
<%= render "devise/shared/links" %>
</div>

